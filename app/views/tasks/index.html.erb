<div class="container">
  <div class="row">
    <h2 class="text-center">Tasks</h2>
    <ul>
      <% @tasks.each do |task| %>
      <li><%= link_to task.name, task_path(task) %></li>
      <% end %>
    </ul>
  </div>

  <div class="row">
    <%= link_to "Add new task", new_task_path %>
  </div>
</div>
